<?xml version="1.0" encoding="utf-8"?>

<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.cashproject.mongsil.ui.main.MainFragment"
        android:label="@string/calendar"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_pager_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_locker_to_home"
            app:destination="@id/homeFragment"/>
        <argument
            android:name="docId"
            app:argType="string"/>
    </fragment>

    <fragment
            android:id="@+id/calendarFragment"
            android:name="com.cashproject.mongsil.ui.pages.calendar.CalendarFragment"
            android:label="@string/calendar"
            tools:layout="@layout/fragment_calendar">
        <action
            android:id="@+id/action_calendar_to_home"
            app:destination="@id/homeFragment"/>
        <argument
            android:name="saying"
            app:argType="com.cashproject.mongsil.model.data.Saying"/>
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.cashproject.mongsil.ui.pages.home.HomeFragment"
        android:label="@string/saying"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_calendar"
            app:destination="@id/calendarFragment"/>
        <action
            android:id="@+id/action_home_to_locker"
            app:destination="@id/lockerFragment"/>
    </fragment>

    <fragment
        android:id="@+id/lockerFragment"
        android:name="com.cashproject.mongsil.ui.pages.locker.LockerFragment"
        android:label="@string/locker"
        app:popUpToInclusive="true"
        app:popUpTo="@id/homeFragment"
        tools:layout="@layout/fragment_locker">
        <action
            android:id="@+id/action_locker_to_home"
            app:destination="@id/homeFragment"/>
        <argument
            android:name="docId"
            app:argType="string"/>
    </fragment>


</navigation>
