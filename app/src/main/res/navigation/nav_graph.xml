<?xml version="1.0" encoding="utf-8"?>

<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/pagerFragment">

    <fragment
        android:id="@+id/pagerFragment"
        android:name="com.cashproject.mongsil.ui.container.PagerFragment"
        android:label="@string/calendar"
        tools:layout="@layout/fragment_pager">
        <action
            android:id="@+id/action_pager_to_home"
            app:destination="@id/sayingFragment"/>
        <action
            android:id="@+id/action_locker_to_saying"
            app:destination="@id/sayingFragment"/>
        <argument
            android:name="docId"
            app:argType="string"/>
        <argument
            android:name="image"
            app:argType="string"/>
    </fragment>

    <fragment
            android:id="@+id/calendarFragment"
            android:name="com.cashproject.mongsil.ui.pages.calendar.ListFragment"
            android:label="@string/calendar"
            tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_calendar_to_home"
            app:destination="@id/sayingFragment"/>
        <argument
            android:name="docId"
            app:argType="string"/>
        <argument
            android:name="image"
            app:argType="string"/>
    </fragment>

    <fragment
        android:id="@+id/sayingFragment"
        android:name="com.cashproject.mongsil.ui.pages.saying.SayingFragment"
        android:label="@string/saying"
        tools:layout="@layout/fragment_saying">
        <action
            android:id="@+id/action_home_to_calendar"
            app:destination="@id/calendarFragment"/>
        <action
            android:id="@+id/action_home_to_locker"
            app:destination="@id/lockerFragment"/>
    </fragment>

    <fragment
        android:id="@+id/lockerFragment"
        android:name="com.cashproject.mongsil.ui.pages.locker.LockerFragment"
        android:label="@string/locker"
        app:popUpToInclusive="true"
        app:popUpTo="@id/sayingFragment"
        tools:layout="@layout/fragment_locker">
        <action
            android:id="@+id/action_locker_to_saying"
            app:destination="@id/sayingFragment"/>
        <argument
            android:name="docId"
            app:argType="string"/>
        <argument
            android:name="image"
            app:argType="string"/>
    </fragment>


</navigation>
