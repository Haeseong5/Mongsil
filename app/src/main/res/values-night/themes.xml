<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mongsil" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/background_color</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:colorBackground">@color/background_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/background_color</item>

        <!--statusBar 투명 여부-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--navigationBar 투명 여부-->
        <item name="android:windowTranslucentNavigation">true</item>
        <!--statusBar color 설정-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--마시멜로부터 배경이 흰색일 경우, 상태바의 아이콘을 검정으로 바꿔주는 기능 지원-->
        <!--상태바 아래에 다른 뷰가 표시될 수 있도록 합니다. 단, 네비게이션 바 부분은 제외합니다.-->
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>

        <!--custom font-family 적용-->
        <item name="android:textViewStyle">@style/DayTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/DayButtonFontStyle</item>
        <item name="android:editTextStyle">@style/DayEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/DayRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/DayCheckboxFontStyle</item>

    </style>
    <style name="TextViewStyle1">
        <item name="android:textSize">@dimen/dimen26</item>
    </style>

    <style name="LatoTextStyle">
        <item name="android:fontFamily">@font/font_lato</item>
        <item name="android:textColor">@color/text_color</item>
    </style>


    <style name="MyBase.TimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorControlNormal">@color/colorYellow</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:colorAccent">@color/text_color</item>
        <item name="android:textColorPrimary">@color/text_color</item>
    </style>

    <style name="ImageViewStyle" >
        <item name="android:tint">@color/icon_color</item>
    </style>

    <style name="ArrowStyle" >
        <item name="android:tint">@color/arrow_color</item>
    </style>

    <style name="IcLikeSelectedStyle" >
        <item name="android:tint">@color/ic_like_sel_color</item>
    </style>

</resources>