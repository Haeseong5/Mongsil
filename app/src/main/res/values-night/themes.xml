<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mongsil" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/darker_gray</item>
        <!--마시멜로부터 배경이 흰색일 경우, 상태바의 아이콘을 검정으로 바꿔주는 기능 지원-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!--custom font-family 적용-->
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>

    </style>
    <style name="TextViewStyle1">
        <item name="android:textSize">@dimen/dimen26</item>
    </style>

    <style name="LatoTextStyle">
        <item name="android:fontFamily">@font/font_lato</item>
    </style>

    <style name="DatePickerStyle">
        <item name="colorControlNormal">@color/colorYellow</item>
        <item name="android:headerBackground">@color/black</item>
        <item name="android:calendarTextColor">@color/black</item>
        <item name="android:dayOfWeekBackground">@color/black</item>
        <item name="android:yearListSelectorColor">@color/black</item>
    </style>
</resources>