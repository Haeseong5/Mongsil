<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mongsil" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#333333</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">#333333</item>
        <item name="android:colorBackground">#333333</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/darker_gray</item>
        <!--마시멜로부터 배경이 흰색일 경우, 상태바의 아이콘을 검정으로 바꿔주는 기능 지원-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!--custom font-family 적용-->
        <item name="android:textViewStyle">@style/NightTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/NightButtonFontStyle</item>
        <item name="android:editTextStyle">@style/NightEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/NightRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/NightCheckboxFontStyle</item>

    </style>
    <style name="TextViewStyle1">
        <item name="android:textSize">@dimen/dimen26</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LatoTextStyle">
        <item name="android:fontFamily">@font/font_lato</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="MyBase.TimePicker" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorControlNormal">@color/colorYellow</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorAccent">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="ImageViewStyle" >
        <item name="android:tint">@color/white</item>
    </style>
</resources>