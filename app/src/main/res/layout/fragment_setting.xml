<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="@dimen/margin8"
            android:text="설정"/>

        <LinearLayout
            android:id="@+id/ll_setting_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin30">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                style="@style/ImageViewStyle"
                android:src="@drawable/ic_notice"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="#333333"
                android:letterSpacing="-0.05"
                android:text="알림 설정" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_setting_backup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin30">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                style="@style/ImageViewStyle"
                android:src="@drawable/ic_backup"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="#333333"
                android:letterSpacing="-0.05"
                android:text="백업" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_setting_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin30">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_review"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="#333333"
                android:letterSpacing="-0.05"
                android:text="리뷰 쓰기" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_setting_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin30">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                style="@style/ImageViewStyle"
                android:src="@drawable/ic_question"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="#333333"
                android:letterSpacing="-0.05"
                android:text="문의하기" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_setting_moreapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin30">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                style="@style/ImageViewStyle"
                android:src="@drawable/ic_moreapp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="#333333"
                android:letterSpacing="-0.05"
                android:text="개발자의 다른 앱" />
        </LinearLayout>

    </LinearLayout>
</layout>